{
    "name": "vangxh/vbot",
    "type": "library",
    "description": "高度自定义的微信机器人，能够实现群控制，自动回复，消息转发，防撤回，留言统计等功能",
    "keywords": [
        "微信",
        "weixin",
        "微信机器人",
        "机器人"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Vangxh",
            "email": "vangxh@qq.com"
        }
    ],
    "bin": [
        "bin/vbot"
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.2",
        "nesbot/carbon": "^2.0.0",
        "symfony/console": "^6.4",
        "monolog/monolog": "^3.8",
        "aferrandini/phpqrcode": "^1.0",
        "illuminate/config": "^10.48",
        "illuminate/cache": "^10.48",
        "illuminate/filesystem": "^10.48",
        "illuminate/container": "^10.48",
        "illuminate/redis": "^10.48",
        "illuminate/database": "^10.38"
    },
    "autoload": {
        "files": [
            "src/Support/helpers.php"
        ],
        "psr-4": {
            "Hanson\\Vbot\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "require-dev": {
        "composer/composer": "^2.2"
    }
}
